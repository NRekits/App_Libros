<!DOCTYPE html>
<html>

<head>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
	<style>
		.logo {
			width: 200;
			height: 200;
		}
	</style>
</head>

<body>
	<div class="container mt-3">
		<div class="row">
			<div class="col-md-8 offset-md-2 container">
				<div class="row">
					<div class="col-md-12 align-self-center">
						<img src="./template/libro.png" width="200" height="200" alt="Logo" class="float-start">
						<p class="text-center mt-5 display-1">Recibo</p>
						<p class="text-center h5">
							<span class="text-muted">Ticket de compra</span>
						</p>
					</div>
				</div>
				<div class="row mt-5">
					<div class="col-md-12">
						<table class="table">
							<tbody>
								<tr>
									<th scope="row">Nombre</th>
									<td class="text-center"><%= pedido.nombre %></td>
								</tr>

								<tr>
									<th scope="row">Direccion</th>
									<td class="text-center"><%= pedido.direccion %></td>
								</tr>

								<tr>
									<th scope="row">Fecha</th>
									<td class="text-center"><%= pedido.fecha %></td>
								</tr>
								<tr>
									<th scope="row">Pago en</th>
									<td class="text-center"><%= pedido.pago %></td>
								</tr>
								<tr>
									<th scope="row">CÃ³digo de compra</th>
									<td class="text-center"><%= pedido.codigo %></td>
								</tr>
								<tr>
									<th scope="row">Productos</th>
									<td></td>
								</tr>
								<% if(pedido.productos.length > 0) { %>
									<% pedido.productos.forEach(producto => { %>
										<tr><%= producto.nombre %></tr><td><%= producto.precio %></td>
									<% }) %>
								<% } %>
								<tr>
									<th scope="row">Importe total</th>
									<td><%= pedido.total %></td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>

</html>